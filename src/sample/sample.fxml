<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Hello!"
          fx:id="greetingText"
          GridPane.rowIndex="0"></Text>

    <Text text="Please enter your name:"
          fx:id="askingForName"
          GridPane.rowIndex="1"></Text>

    <TextField text=""
               fx:id="userInput"
               GridPane.rowIndex="2"></TextField>

    <Button text="Confirm"
            fx:id="enterName"
            onAction="#nameEntered"
            GridPane.rowIndex="3"></Button>

    <Text text=""
          fx:id="name_age_year"
          GridPane.rowIndex="4"></Text>

    <Button text="Restart"
            fx:id="restartGame"
            onAction="#restartGame"
            GridPane.rowIndex="9"></Button>


</GridPane>